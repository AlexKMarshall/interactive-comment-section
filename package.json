{
  "name": "interactive-comment-section",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "docker:up:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up -d",
    "test": "yarn docker:up:test && yarn db:migrate:test && dotenv -e .env.test.local -- jest --watch",
    "test:cov": "jest --collectCoverage --watchAll=false",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic",
    "db:push": "dotenv -e .env.development.local -- prisma db push",
    "db:studio": "dotenv -e .env.development.local -- prisma studio",
    "db:seed": "dotenv -e .env.development.local prisma db seed",
    "db:migrate:test": "dotenv -e .env.test.local -- prisma migrate deploy",
    "generate": "concurrently \"yarn generate:nexus\" \"yarn generate:genql\"",
    "generate:nexus": "dotenv -e .env.development.local -- nodemon --exec 'ts-node --transpile-only -P nexus.tsconfig.json src/pages/api/graphql' --ext 'ts' --watch '**/schema/**/*.ts' --watch '**/graphql/*.ts'",
    "generate:genql": "dotenv -e .env.development.local -- nodemon --exec 'genql --schema src/schema/generated/schema.graphql --output src/schema/generated/genql'  --watch 'src/schema/generated/schema.graphql'"
  },
  "dependencies": {
    "@genql/runtime": "^2.9.0",
    "@prisma/client": "^3.7.0",
    "@vanilla-extract/babel-plugin": "^1.1.4",
    "@vanilla-extract/css": "^1.6.8",
    "@vanilla-extract/dynamic": "^2.0.2",
    "@vanilla-extract/next-plugin": "^2.0.1",
    "@vanilla-extract/recipes": "^0.2.3",
    "@vanilla-extract/sprinkles": "^1.3.3",
    "@vanilla-extract/webpack-plugin": "^2.1.5",
    "apollo-server-micro": "^3.6.1",
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "graphql": "^15.8.0",
    "graphql-scalars": "^1.14.1",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "next": "12.0.7",
    "nexus": "^1.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "^3.34.7"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@genql/cli": "^2.9.0",
    "@storybook/addon-a11y": "^6.4.9",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/builder-webpack5": "^6.4.9",
    "@storybook/manager-webpack5": "^6.4.9",
    "@storybook/react": "^6.4.9",
    "@storybook/testing-react": "^1.2.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/faker": "^5.5.9",
    "@types/jest-axe": "^3.5.3",
    "@types/micro-cors": "^0.1.2",
    "@types/node": "17.0.5",
    "@types/react": "17.0.38",
    "babel-loader": "^8.2.3",
    "chromatic": "^6.3.3",
    "concurrently": "^7.0.0",
    "css-loader": "^6.5.1",
    "dotenv-cli": "^4.1.1",
    "eslint": "8.5.0",
    "eslint-config-next": "12.0.7",
    "eslint-plugin-storybook": "^0.5.5",
    "faker": "^5.5.0",
    "jest": "^27.4.5",
    "jest-axe": "^5.0.1",
    "jest-extended": "^1.2.0",
    "mini-css-extract-plugin": "^2.4.5",
    "next-test-api-route-handler": "^3.0.2",
    "nodemon": "^2.0.15",
    "prisma": "^3.7.0",
    "storybook-addon-pseudo-states": "^1.0.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "4.5.4",
    "webpack": "5"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "resolutions": {
    "@genql/cli/graphql": "^15.8.0"
  }
}
